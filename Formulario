  <script>
    const webhookURL = "https://discord.com/api/webhooks/1420203901424242839/MQIU4loHJqTe4qUkyq1nlv3ohqAoM9UIyJG9sYUF8rfIg9rUQMmSRBzc99RIK8Tp1oBA; // ⚠️ Pega tu webhook aquí

    document.getElementById("staffForm").addEventListener("submit", function(e) {
      e.preventDefault();

      const formData = new FormData(e.target);
      const fields = [];
      for (const [key, value] of formData.entries()) {
        fields.push({ name: key, value: value || "N/A" });
      }

      const data = {
        username: "Postulación Phantom",
        embeds: [{
          title: "📋 Nueva Postulación a Helper",
          color: 0x9b59b6,
          fields: fields,
          footer: { text: "Servidor Phantom - Postulaciones" }
        }]
      };

      fetch(webhookURL, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data)
      }).then(() => {
        alert("✅ Tu postulación ha sido enviada correctamente.");
        e.target.reset();
      }).catch(() => {
        alert("❌ Hubo un error al enviar tu postulación.");
      });
    });
  </script>
